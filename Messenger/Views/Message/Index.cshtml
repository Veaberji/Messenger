@model IEnumerable<User>

<div class="card-body">
    <div class="alert-danger" id="validationErrors"></div>

    <div class="mb-3">
        <label class="form-label" for="receiver">User</label>
        <input class="form-control"
               list="registeredUsers"
               id="receiver"
               name="receiver"
               required />
        <datalist class="form-control" id="registeredUsers" hidden>
            @foreach (var user in Model)
            {
                <option value="@user.UserName"></option>
            }
        </datalist>
    </div>
    <input hidden class="form-control" type="text" id="user" value="@User.Identity.Name" />
    <div class="mb-3">
        <label class="form-label" for="theme">Theme</label>
        <input class="form-control" type="text" id="theme" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="message">Message</label>
        <input class="form-control" type="text" id="message" />
    </div>
    <input type="button" class="btn btn-primary" id="sendButton" value="Send Message" />
</div>

<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
@*todo: table from, to theme, message*@
<div class="row">
    <div class="mb-3">
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th>Sender</th>
                    <th>Receiver</th>
                    <th>Theme</th>
                    <th>Message</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody id="messages">
            </tbody>
        </table>
    </div>
</div>

@{
    await Html.RenderPartialAsync("Shared/_MessengerScriptsPartial");
}