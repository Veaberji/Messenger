@model IEnumerable<User>

<div class="card-body">

    <div class="mb-3">
        <label class="form-label" for="receiver">User</label>
        <select class="form-control" id="receiver">
            @foreach (var user in Model)
            {
                <option value="@user.UserName">@user.UserName</option>
            }
        </select>
    </div>
    <input hidden class="form-control" type="text" id="sender" value="@User.Identity.Name" />
    <div class="mb-3">
        <label class="form-label" for="theme">Theme</label>
        <input class="form-control" type="text" id="theme" />
    </div>
    <div class="mb-3">
        <label class="form-label" for="message">Message</label>
        <input class="form-control" type="text" id="message" />
    </div>
    <input type="button" class="btn btn-primary" id="sendButton" value="Send Message" />
</div>

<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
